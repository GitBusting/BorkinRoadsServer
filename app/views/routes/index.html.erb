<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Path</th>
      <th>Rating</th>
      <th>Date</th>
      <th>Estimatedduration</th>
      <th>Nearwater</th>
      <th>Nearpark</th>
      <th>Favourite</th>
      <th>Numberoftimesused</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= route.path %></td>
        <td><%= route.rating %></td>
        <td><%= route.date %></td>
        <td><%= route.estimatedDuration %></td>
        <td><%= route.nearWater %></td>
        <td><%= route.nearPark %></td>
        <td><%= route.favourite %></td>
        <td><%= route.numberOfTimesUsed %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

